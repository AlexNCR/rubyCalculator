puts "Добро пожаловать в калькулятор на RUBY"
puts "Выберите: 1.cложение, 2.вычитание,\n3.умножение, 4.деление, 5.степень,\n6.корень или 7.среденее арифмитическое"
choise = gets.chomp
case choise
when "Cложение", "сложение", "1"
  puts "Вы выбрали сложение"
  print "Введите первое число: "
  x1 = gets.chomp.to_f
  print "Введите второе число: "
  x2 = gets.chomp.to_f
  sum = x1 + x2
  puts "Вы ввели #{x1} и #{x2}, сумма составила #{sum}"
when "Вычитание", "вычитание", "2"
  puts "Вы выбрали вычитание"
  print "Введите первое число: "
  x3 = gets.chomp.to_f
  print "Введите второе число: "
  x4 = gets.chomp.to_f
  subs = x3 - x4
  puts "Вы ввели #{x3} и #{x4}, вычитание составило #{subs}"
when "Умножение", "умножение", "3"
  puts "Вы выбрали умножение"
  print "Введите первое число: "
  x5 = gets.chomp.to_f
  print "Введите второе число: "
  x6 = gets.chomp.to_f
  multi = x5 * x6
  puts "Вы ввели #{x5} и #{x6}, умножение составило #{multi}"
when "Деление", "деление", "4"
  puts "Вы выбрали деление"
  print "Введите первое число: "
  x7 = gets.chomp.to_f
  print "Введите второе число: "
  x8 = gets.chomp.to_f
  devide = x7 / x8
  puts "Вы ввели #{x7} и #{x8}, деление составило #{devide}"
when "Степень", "степень", "5"
  puts "Вы выбрали возведение в степень"
  print "Введите число: "
  x9 = gets.chomp.to_f
  print "Введите степень: "
  x10 = gets.chomp.to_f
  stepen = x9 ** x10
  puts "Вы ввели #{x9} и #{x10}, возведение в степень составило #{stepen}"
when "Корень", "корень", "6"
  puts "Вы выбрали вынесение из под корня"
  print "Введите число: "
  x11 = gets.chomp.to_f
  x12 = Math.sqrt(x11)
  puts "Вы ввели #{x11}, корень его числа составил #{x12}"
when "Среднее Арифмитическое", "Среднее арифмитическое", "среднее арифмитическое", "7"
  puts "Вы выбрали среднее арифмитическое"
  print "Введите сумму чисел: "
  x13 = gets.chomp.to_f
  print "Введите колическтво чисел: "
  x14 = gets.chomp.to_f
  sredarif = x13 / x14
  puts "Вы ввели #{x13} и #{x14}, среднее арифмитическое #{sredarif}"
end
